" pathogen
execute pathogen#infect()

" 256 mode
set t_Co=256

" colorscheme
colorscheme molokai
let g:molokai_original = 1
"set background=dark

" syntax
syntax on

" highlight cursor location
set cursorline
set cursorcolumn

" tab behavior
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" show line number
set number
